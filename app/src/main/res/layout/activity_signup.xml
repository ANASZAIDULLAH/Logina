<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/garments"
    tools:context=".Signup">
    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/sign"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up Here"
        android:id="@+id/text"
        android:textSize="50sp"
        android:layout_below="@id/image"
        android:textStyle="italic"
        android:textColor="#090909"
        android:textAlignment="center"
        android:background="#875915"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text"
        android:hint="Username"
        android:background="#E6EDED"
        android:textSize="25dp"
        android:id="@+id/Username"
        />

    <EditText
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Username"
        android:background="#E6EDED"
        android:hint="Confirm Username"
        android:textSize="25dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/confirm"
        android:hint="Enter Password"
        android:background="#E6EDED"
        android:textSize="25dp"
        android:id="@+id/password"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/password"
        android:hint="Confirm Password"
        android:background="#E6EDED"
        android:textSize="25dp"
        android:id="@+id/cpassword"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cpassword"
        android:id="@+id/gender"
        android:hint="Gender"
        android:background="#2196F3"
        android:textSize="25dp"

        />
    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gender"
        android:hint="Male"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:background="@color/white"
        android:id="@+id/male"
        />
    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/male"
        android:hint="Male"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:background="@color/white"
        android:id="@+id/female"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/female"
        android:hint="Sign up"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="italic"

        />




</RelativeLayout>